@page
@using Airport.Aids
@using Airport.Data.FlightOfPassenger
@using Airport.Data.Passenger
@using Airport.Pages.Extensions
@model Airport.Soft.Areas.Luggage.Pages.Luggages.DetailsModel

@{
    Layout = "_Details";
    const string units = "/Passenger/Passengers";
    var passengerName = GetMember.Name<PassengerData>(x => x.Name);
}

<body>
    @Html.DisplayControlsFor(m => m.Item.Id)
    @Html.DisplayControlsFor(m => m.Item.PassengerId)
    @Html.DisplayControlsFor(m => m.Item.Name)
    @Html.DisplayControlsFor(m => m.Item.Dimensions)
    @Html.DisplayControlsFor(m => m.Item.Weight)
</body>

@section Details{
    @Html.HypertextLinkFor(string.Empty, new Link("Show passenger info",
        $"{units}/Index?fixedFilter={passengerName}&fixedValue={Model.Item.PassengerId}"))
}