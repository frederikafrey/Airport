@page
@using Airport.Aids
@using Airport.Data.FlightOfPassenger
@using Airport.Pages.Extensions
@model Airport.Soft.Areas.Passenger.Pages.Passengers.DetailsModel

@{
    Layout = "_Details";
    const string flightofpassengers = "/FlightOfPassenger/FlightOfPassengers";
    var passengerId = GetMember.Name<FlightOfPassengerData>(x => x.PassengerId);
}

<body>
    @Html.DisplayControlsFor(m => m.Item.Id)
    @Html.DisplayControlsFor(m => m.Item.Name)
    @Html.DisplayControlsFor(m => m.Item.Age)
    @Html.DisplayControlsFor(m => m.Item.Address)
</body>

@section Details{
    @Html.HypertextLinkFor(string.Empty, new Link("Show flight of passenger",
        $"{flightofpassengers}/Index?fixedFilter={passengerId}&fixedValue={Model.Item.Name}"))
}