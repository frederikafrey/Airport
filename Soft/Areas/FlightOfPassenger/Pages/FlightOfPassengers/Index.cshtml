@page
@using Airport.Pages.Extensions
@model Airport.Soft.Areas.FlightOfPassenger.Pages.FlightOfPassengers.IndexModel

@{
    Layout = "_Index";
    var page = Model.PageUrl;

}

@section Create {
    @Html.HypertextLinkFor(string.Empty, new Link(Constants.CreateNewLinkTitle, $"{page}/Create?fixedFilter={Model.FixedFilter}&fixedValue={Model.FixedValue}"))
}


<body>
    <table class="table">
        <thead>
            @Html.TableHeaderFor(
                new Link(Html.DisplayNameFor(m => m.Item.PassengerId), Model.GetSortString(m => m.PassengerId, page)),
                new Link(Html.DisplayNameFor(m => m.Item.FlightId), Model.GetSortString(m => m.FlightId, page)),
                new Link(Html.DisplayNameFor(m => m.Item.LuggageId), Model.GetSortString(m => m.LuggageId, page))
            )
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {

                <tr>
                    @Html.TableRowFor(
                   page,
                   item.Id,
                   Model.FixedFilter,
                   Model.FixedValue,
                        Html.DisplayFor(modelItem => item.PassengerId),
                   Html.DisplayFor(modelItem => item.FlightId),                   
                   Html.DisplayFor(modelItem => item.LuggageId)
                   )
                </tr>
            }
        </tbody>
    </table>

</body>