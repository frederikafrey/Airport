@page
@model Airport.Soft.Areas.Airport.Pages.Airports.EditModel

@{
    Layout = "_Edit";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirportData.Address" class="control-label"></label>
                <input asp-for="AirportData.Address" class="form-control" />
                <span asp-validation-for="AirportData.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportData.Phone" class="control-label"></label>
                <input asp-for="AirportData.Phone" class="form-control" />
                <span asp-validation-for="AirportData.Phone" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AirportData.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back</a>
</div>
