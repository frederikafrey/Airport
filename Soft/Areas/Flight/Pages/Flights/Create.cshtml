@page
@using Airport.Pages.Extensions
@model Airport.Soft.Areas.Flight.Pages.Flights.CreateModel

@{
    Layout = "_Create";

    var url = "/Flight/Flights/Create?handler=";
}

@section Scripts { }

<body>
    @Html.EditControlsForDropDownWithOnChange(m => m.Item.StartCountry, Model.Countries,
        "StartCountry", "StartCity", url + "Cities")
    @Html.EditControlsForDropDownWithId(m => m.Item.StartCity, Model.Cities, "StartCity")
    @Html.EditControlsForDropDownWithOnChange(m => m.Item.FinalCountry, Model.Countries,
        "FinalCountry", "FinalCity", url + "Cities")
    @Html.EditControlsForDropDownWithId(m => m.Item.FinalCity, Model.Cities, "FinalCity")
    @Html.EditControlsForDropDown(m => m.Item.StopOver, Model.StopOvers)
    @Html.EditControlsFor(m => m.Item.StartTime)
    @Html.EditControlsFor(m => m.Item.ArrivalTime)
    @Html.EditControlsFor(m => m.Item.Occupancy)
    @Html.EditControlsFor(m => m.Item.Company)
    @Html.EditControlsFor(m => m.Item.Plane)
</body>

