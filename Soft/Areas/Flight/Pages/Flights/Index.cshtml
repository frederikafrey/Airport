@page
@using Airport.Pages.Extensions
@model Airport.Soft.Areas.Flight.Pages.Flights.IndexModel

@{
    Layout = "_Index";
    var page = Model.PageUrl;

}

@section Create {
    @Html.HypertextLinkFor(string.Empty, new Link(Constants.CreateNewLinkTitle, $"{page}/Create?fixedFilter={Model.FixedFilter}&fixedValue={Model.FixedValue}"))
}


<body>
    <table class="table">
        <thead>
            @Html.TableHeaderFor(
                new Link(Html.DisplayNameFor(m => m.Item.StartCountry), Model.GetSortString(m => m.StartCountry, page)),
                new Link(Html.DisplayNameFor(m => m.Item.StartCity), Model.GetSortString(m => m.StartCity, page)),
                new Link(Html.DisplayNameFor(m => m.Item.FinalCountry), Model.GetSortString(m => m.FinalCountry, page)),
                new Link(Html.DisplayNameFor(m => m.Item.FinalCity), Model.GetSortString(m => m.FinalCity, page)),
                new Link(Html.DisplayNameFor(m => m.Item.StartTime), Model.GetSortString(m => m.StartTime, page)),
                new Link(Html.DisplayNameFor(m => m.Item.ArrivalTime), Model.GetSortString(m => m.ArrivalTime, page)),
                new Link(Html.DisplayNameFor(m => m.Item.Occupancy), Model.GetSortString(m => m.Occupancy, page)),
                new Link(Html.DisplayNameFor(m => m.Item.Company), Model.GetSortString(m => m.Company, page)),
                new Link(Html.DisplayNameFor(m => m.Item.Plane), Model.GetSortString(m => m.Plane, page))
                )
        </thead>
        <tbody>

            @foreach (var item in Model.Items)
            {

                <tr>
                    @Html.TableRowFor(
                        page,
                        item.Id,
                        Model.FixedFilter,
                        Model.FixedValue, 
                        Html.DisplayFor(modelItem => item.StartCountry),
                        Html.DisplayFor(modelItem => item.StartCity),
                        Html.DisplayFor(modelItem => item.FinalCountry),
                        Html.DisplayFor(modelItem => item.FinalCity),
                        Html.DisplayFor(modelItem => item.StartTime),
                        Html.DisplayFor(modelItem => item.ArrivalTime),
                        Html.DisplayFor(modelItem => item.Occupancy),
                        Html.DisplayFor(modelItem => item.Company),
                        Html.DisplayFor(modelItem => item.Plane)
                        )
                </tr>
            }
        </tbody>

    </table>
    
</body>