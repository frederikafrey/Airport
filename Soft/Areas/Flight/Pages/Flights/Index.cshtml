    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].StartingPointId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].FinalPointId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].ArrivingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].Occupancy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightData[0].Company)
